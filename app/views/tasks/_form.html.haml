= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "件のエラーがあります。")}"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .actions
    タイトル
  .actions
    = f.text_field :title, placeholder:'タイトル'
  .actions
    本文
  .actions
    = f.text_field :content, placeholder:'本文'
  .actions
    = f.select :priority, [['優先度1', 1], ['優先度2', 2], ['優先度3', 3]]
  .actions
    = f.submit '作成'

