= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "件のエラーがあります。")}"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .edit-title-empty
  .actions
    タイトル
  .actions
    = f.text_field :title, placeholder:'タイトル', class: "edit-title-form"

  .edit-content-empty
  .actions
    本文
  .actions
    = f.text_field :content, placeholder:'本文', class: "edit-content-form"

  .actions
    = f.submit '編集する', class: 'edit-task_submit'

